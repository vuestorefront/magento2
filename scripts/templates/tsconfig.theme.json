{
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "target": "ES2019",
    "module": "ES2015",
    "moduleResolution": "node",
    "lib": ["DOM", "ES2019"],
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "dist",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "skipLibCheck": true
  },
  "files": [
    "./composables/index.ts",
    "./plugins/graphqlClient.ts"
  ]
}
