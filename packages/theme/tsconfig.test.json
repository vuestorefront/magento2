{
  "compilerOptions": {
    "declaration": true,
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": false,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "@types/node",
      "@nuxt/vue-app",
      "@nuxt/types",
      "nuxt-i18n",
      "@types/jest",
      "@types/testing-library__jest-dom"
    ],
    "resolveJsonModule": true,
    "rootDir": "./",
    "declarationDir": "./lib",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true
  },
  "extends": "./tsconfig.json",
  "include": [
    "**/*.spec.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
