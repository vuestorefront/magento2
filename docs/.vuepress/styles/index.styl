
.site-name {
  display: none !important;
}

.badge {
  margin-top: 4px;
  background-color: #22c34b;
}

.badge.info {
  background-color: #22c34b !important;
}

.multiselect__tag {
  background: #22c34b !important;
}

.custom-block.tip {
  border-color: #22c34b;
  background-color: #f0f7f2;
}

a code {
  color: $accentColor !important;
  font-weight: bold;
}

q {
  position: relative;
  display: block;
  margin: 30px 0;
  padding: 40px 20px;
  border-radius: 8px;
}

@media (max-width: 959px) {
  q {
    margin: 20px 0;
    padding: 40px 0;
  }
}

q::before,
q::after {
  position: absolute;
  font-size: 40px;
  line-height: 1;
  color: #9CA3AF;
}


q::before {
  content: '❝';
  top: 5px;
  left: 0;
}

q::after {
  content: '❞';
  bottom: -5px;
  right: 0;
}

q p {
  margin: 0px;
  font-size: 1.1rem;
  font-weight: 500;
  font-style: italic;
  text-align: center;
}
